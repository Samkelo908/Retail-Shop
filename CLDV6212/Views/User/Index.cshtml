@model IEnumerable<CLDV6212.Models.User>

@{
    ViewData["Title"] = "Users";
}

<!-- Custom CSS for styling -->
<style>
    body {
        background-color: #f0f2f5;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        color: #333;
    }

    

    h2 {
        color: #2d3436;
        font-weight: 600;
        font-size: 28px;
        text-transform: uppercase;
        letter-spacing: 1px;
        margin-bottom: 30px;
    }

    .btn-success {
        background-color: #00b894;
        border: none;
        font-size: 14px;
        padding: 10px 20px;
        color: #fff;
        border-radius: 5px;
        transition: all 0.3s ease-in-out;
    }

        .btn-success:hover {
            background-color: #019875;
            transform: scale(1.05);
        }

    .table {
        width: 100%;
        border-collapse: collapse;
        overflow: hidden;
        border-radius: 8px;
    }

        .table thead {
            background-color: #2d3436;
            color: #ffffff;
            text-transform: uppercase;
            letter-spacing: 0.05em;
        }

        .table th, .table td {
            padding: 16px;
            text-align: center;
            font-size: 14px;
        }

        .table tbody tr {
            background-color: #f9f9f9;
            transition: background-color 0.3s ease;
        }

            .table tbody tr:hover {
                background-color: #dfe6e9;
            }

    .btn-danger {
        background-color: #d63031;
        border: none;
        font-size: 12px;
        padding: 8px 12px;
        color: #ffffff;
        border-radius: 4px;
        transition: all 0.3s ease;
    }

        .btn-danger:hover {
            background-color: #c0392b;
            transform: scale(1.05);
        }

    .user-image {
        width: 60px;
        height: 60px;
        border-radius: 50%;
        box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.15);
        object-fit: cover;
    }
</style>

<div class="container">
    <div class="text-center">
        <h2>@ViewData["Title"]</h2>
        <p>
            <a asp-action="AddUser" class="btn btn-success">Add New User</a>
        </p>
    </div>

    <table class="table">
        <thead>
            <tr>
                <th>User ID</th>
                <th>Name</th>
                <th>Surname</th>
                <th>Email</th>
                <th>Phone Number</th>
                <th>Address</th>
                <th>Profile Image</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model)
            {
                <tr>
                    <td>@user.Id</td>
                    <td>@user.Name</td>
                    <td>@user.Surname</td>
                    <td>@user.Email</td>
                    <td>@user.Phone</td>
                    <td>@user.Address</td>
                    <td><img src="@user.ImageUrl" alt="User Image" class="user-image" /></td>
                    <td>
                        <form asp-action="Delete" method="post" asp-route-id="@user.Id" class="d-inline">
                            <button type="submit" class="btn btn-danger">Delete</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
